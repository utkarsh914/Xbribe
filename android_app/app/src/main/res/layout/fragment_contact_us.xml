<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
      <RelativeLayout
          android:layout_height="wrap_content"
          android:layout_width="match_parent"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintRight_toRightOf="parent"
          app:layout_constraintTop_toTopOf="parent">
          <androidx.cardview.widget.CardView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/cardview_one"
              android:layout_marginRight="12dp"
              android:layout_marginLeft="12dp"
              android:layout_marginTop="12dp"
              android:elevation="8dp"
              app:layout_constraintLeft_toLeftOf="parent"
              app:layout_constraintRight_toRightOf="parent"
              app:layout_constraintTop_toTopOf="parent"
              >
              <RelativeLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  >

                  <com.mikhaellopez.circularimageview.CircularImageView
                      android:id="@+id/img_image1"
                      android:layout_width="120dp"
                      android:layout_height="120dp"
                      android:layout_centerHorizontal="true"
                      android:elevation="16dp"
                      android:layout_marginTop="36dp"
                      android:src="@drawable/rishiraj"
                      />


                  <RelativeLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_below="@+id/img_image1"
                      android:padding="14dp"
                      android:layout_marginLeft="14dp">


                      <TextView
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:text="Rishiraj Paul Choudhury"
                          android:id="@+id/tv_membername"
                          android:textSize="20sp"
                          android:layout_marginTop="10dp"
                          android:fontFamily="@font/roboto"
                          android:textStyle="bold"
                          />
                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:textSize="16sp"
                          android:textColor="@color/md_blue_400"
                          android:id="@+id/tv_email_id"
                          android:layout_below="@+id/tv_member_name"
                          android:layout_marginTop="48dp"
                          android:textStyle="italic"
                          android:text="getoxdev@gmail.com"
                          />

                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:id="@+id/tv_phone_no"
                          android:text="Phone No: 9706262131"
                          android:textSize="16sp"
                          android:textStyle="italic"
                          android:textColor="@color/md_blue_500"
                          android:layout_below="@+id/tv_email_id"
                          />
                      <Button
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:id="@+id/btn_connect_rishi"
                          android:layout_alignParentRight="true"
                          android:layout_marginTop="36dp"
                          android:text="CONNECT"
                          />

                  </RelativeLayout>

              </RelativeLayout>

          </androidx.cardview.widget.CardView>
          <androidx.cardview.widget.CardView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/cardview_two"
              android:layout_marginLeft="12dp"
              android:layout_marginRight="12dp"
              android:layout_below="@+id/cardview_one"
              android:elevation="8dp"
              android:layout_marginTop="50dp"
              app:layout_constraintLeft_toLeftOf="parent"
              app:layout_constraintRight_toRightOf="parent"
              app:layout_constraintTop_toBottomOf="@id/cardview_one">
              <RelativeLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">

                  <com.mikhaellopez.circularimageview.CircularImageView
                      android:id="@+id/img_image2"
                      android:layout_width="120dp"
                      android:layout_height="120dp"
                      android:layout_centerHorizontal="true"
                      android:elevation="16dp"
                      android:layout_marginTop="36dp"
                      android:src="@drawable/nandini"
                      />


                  <RelativeLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_below="@+id/img_image2"
                      android:padding="14dp"
                      android:layout_marginLeft="14dp">


                      <TextView
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:text="Nandini Agarwal"
                          android:id="@+id/tv_membername2"
                          android:textSize="20sp"
                          android:layout_marginTop="10dp"
                          android:fontFamily="@font/roboto"
                          android:textStyle="bold"
                          />
                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:textSize="16sp"
                          android:id="@+id/tv_email_id2"
                          android:textColor="@color/md_blue_400"
                          android:layout_below="@+id/tv_member_name"
                          android:layout_marginTop="48dp"
                          android:textStyle="italic"
                          android:text="nandini200400@gmail.com"
                          />

                      <TextView
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:id="@+id/tv_phone_no2"
                          android:text="Phone No: 8134082990"
                          android:textStyle="italic"
                          android:textColor="@color/md_blue_500"
                          android:textSize="16sp"
                          android:layout_below="@+id/tv_email_id2"
                          />
                      <Button
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:id="@+id/btn_connect_nandini"
                          android:layout_alignParentRight="true"
                          android:layout_marginTop="36dp"
                          android:text="CONNECT"
                          />

                  </RelativeLayout>

              </RelativeLayout>
          </androidx.cardview.widget.CardView>
      </RelativeLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>

